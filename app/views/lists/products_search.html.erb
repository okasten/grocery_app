<div class='container is-fluid'>
  <div class='hero-body'>

    <h1>Search Results For <%= @product_name %></h1>

    <ul class='menu-list'>
    	<% @products.each do |product| %>
    		<li>
    			<%= link_to product.name, user_product_path(@user, product) %>
          <%= form_for [:user, :list, @product_list] do |f| %>
            <%= f.label :product_amount %>
            <%= f.number_field :product_amount, value: 1 %><br/>
            <%= f.label :store_id %>
            <%= f.collection_select :store_id, @stores, :id, :name %><br/>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to List" %>
          <% end %>
    		</li>
    	<% end %>
    </ul>

  </div>
</div>