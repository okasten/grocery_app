<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %></br>

  <%= f.label :email %>
  <%= f.text_field :email %></br>

  <%= f.label :username %>
  <%= f.text_field :username %></br>

  <%= f.label :password %>
  <%= f.password_field :password %></br>

  <%= f.submit %>

<% end %>
