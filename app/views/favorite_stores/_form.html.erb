<% if @favorite_store.errors.any? %>
	<ul>
		<% @favorite_store.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for [@user, @favorite_store, @store] do |f| %>
	<%= f.label :name %><br/>
	<%= f.text_field :name %><br/>

	<%= f.label :address %><br/>
	<%= f.text_field :address %><br/>

  <%= f.label :comment %></br>
  <%= f.text_area :comment %></br>

	<%= f.submit %>
<% end %>
