<%= form_for [:user, @store_product] do |f| %>
	<%= f.label :store_id %>
	<%= f.collection_select :store_id, @stores, :id, :name %><br/>

	<%= f.label :aisle %> #
	<%= f.number_field :aisle, min: 1, max: 99 %><br/>

	<%= f.label :price %> $
	<%= f.number_field :price, :step => 0.01, min: 0.01 %><br/>

	<%= f.hidden_field :product_id, value: @product.id %>

	<%= f.submit 'Add To Store' %>
<% end %>