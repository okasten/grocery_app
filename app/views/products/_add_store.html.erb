<%= form_for @store_product do |f| %>
	<%= f.label :store_id %>
	<%= f.collection_select :store_id, @stores, :id, :name %><br/>

	<%= f.label :aisle %> #
	<%= f.number_field :aisle %><br/>

	<%= f.label :price %> $
	<%= f.number_field :price %><br/>

	<%= f.hidden_field :product_id, value: @product.id %>

	<%= f.submit 'Add Store' %>
<% end %>